<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Matkaklubi - <%= matk.nimetus %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="bootstrap.css">
    <link rel="stylesheet" href="/matkaklubi.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="header-container">
        <div class="container">
            <%- include('components/header') %>
        </div>
    </div>
    
    <div class="container">
        <div class="matk-detail mt-4">
            <!-- Matka pÃ¤isepilt -->
            <div class="row mb-4">
                <div class="col-lg-12">
                    <img src="<%= matk.pildiUrl %>" alt="<%= matk.nimetus %>" class="img-fluid rounded">
                </div>
            </div>
            
            <!-- Matka nimetus -->
            <div class="row mb-3">
                <div class="col-lg-12">
                    <h1><%= matk.nimetus %></h1>
                </div>
            </div>
            
            <!-- Matka kirjeldus -->
            <div class="row mb-4">
                <div class="col-lg-12">
                    <p class="lead"><%= matk.kirjeldus %></p>
                    <% if (error) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= error %>
                        </div>
                    <% } %>
                    <% if (success) { %>
                        <div class="alert alert-success" role="alert">
                            <%= success %>
                        </div>
                    <% } %>
                </div>
            </div>
            
            <!-- Registreerunud osalejate arv -->
            <div class="row mb-4">
                <div class="col-lg-12">
                    <p>Registreerunud osalejate arv: <%= matk.osalejad ? matk.osalejad.length : 0 %></p>
                </div>
            </div>
            
            <!-- Vorm -->
            <div class="row">
                <div class="col-lg-12">
                    <form   class="registreerumine" action= "/matk/<%= matk.id %>/registreerumine" method="get">
                        <div class="vali">
                            <label for="nimi">Nimi</label>
                            <input type="text" name="nimi" placeholder="nimi">
                        </div>
                        <div class="vali">
                            <label for="Email">Email</label>
                            <input type="text" name="email" placeholder="email">
                        </div>
                        
                        <input type="submit" value="Registreeru">
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

