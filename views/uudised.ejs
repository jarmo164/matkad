<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Matkaklubi - Uudised</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="bootstrap.css">
    <link rel="stylesheet" href="matkaklubi.css">
    <link rel="stylesheet" href="uudised.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="header-container">
        <div class="container">
            <%- include('components/header') %>
        </div>
    </div>
    
    <div class="container">
        <div class="uudised-sisu mt-4">
            <div class="row mb-4">
                <div class="col-lg-12">
                    <h1>Uudised</h1>
                </div>
            </div>
            
            <div class="row">
                <% uudised.forEach(uudis => { %>
                <div class="col-lg-4 mb-4">
                    <div class="card">
                        <img src="<%= uudis.pilt %>" class="card-img-top" alt="<%= uudis.pealkiri %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= uudis.pealkiri %></h5>
                            <p class="card-text"><%= uudis.kokkuvote %></p>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</body>
</html>

